<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#f8f8f8"
    android:layout_height="match_parent">
    <include layout="@layout/layout_head"/>
    <LinearLayout
        android:paddingLeft="@dimen/dp30"
        android:paddingRight="@dimen/dp30"
        android:layout_marginTop="@dimen/d40"
        android:background="@drawable/bt_white_circle"
        android:layout_marginRight="@dimen/dp30"
        android:layout_marginLeft="@dimen/dp30"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp90">
        <TextView
            android:text="账户:"
            android:textColor="@color/black33"
            android:textSize="@dimen/dp30"
            android:layout_width="@dimen/d100"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_phone"
            android:layout_marginLeft="@dimen/dp15"
            android:textColor="@color/black99"
            android:textSize="@dimen/dp30"
            android:hint="请填写对方手机号"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="@dimen/dp30"
        android:paddingRight="@dimen/dp30"
        android:layout_marginTop="@dimen/dp20"
        android:background="@drawable/bt_white_circle"
        android:layout_marginRight="@dimen/dp30"
        android:layout_marginLeft="@dimen/dp30"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp90">
        <TextView
            android:text="验证码:"
            android:textColor="@color/black33"
            android:textSize="@dimen/dp30"
            android:layout_width="@dimen/d100"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_code"
            android:layout_marginLeft="@dimen/dp15"
            android:textColor="@color/black99"
            android:textSize="@dimen/dp30"
            android:hint="收到的验证码"
            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_yzm"
            android:text="获取验证码"
            android:textColor="@color/black33"
            android:textSize="@dimen/dp30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_comit"
        android:textSize="@dimen/dp38"
        android:background="@drawable/bt_blue_circle"
        android:textColor="@color/white"
        android:text="@string/comit"
        android:layout_marginRight="@dimen/dp40"
        android:layout_marginLeft="@dimen/dp40"
        android:layout_marginTop="@dimen/d40"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp80" />
    <TextView
        android:layout_marginLeft="@dimen/d40"
        android:text="1.帮助别人激活可以增加你的社区活跃度"
        android:textColor="@color/black66"
        android:textSize="@dimen/dp24"
        android:layout_marginTop="@dimen/d40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="@dimen/d40"
        android:text="2.激活成功后，双方会成为好友关系"
        android:textColor="@color/black66"
        android:textSize="@dimen/dp24"
        android:layout_marginTop="@dimen/dp15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>