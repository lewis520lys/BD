<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/bg_f8"
    android:layout_height="match_parent">
    <include layout="@layout/layout_head"/>
    <LinearLayout
        android:layout_marginTop="@dimen/d40"
        android:id="@+id/ll_gy"
        android:background="@color/white"

        android:gravity="center_vertical"
        android:paddingRight="@dimen/d25"
        android:paddingLeft="@dimen/d25"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d105">

        <TextView
            android:layout_marginLeft="@dimen/dp15"
            android:textColor="@color/black33"
            android:textSize="@dimen/dp30"
            android:text="关于我们"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/wofanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View

        android:layout_marginRight="@dimen/d25"
        android:layout_marginLeft="@dimen/d25"
        android:background="@color/black_dd"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout

        android:background="@color/white"
        android:layout_marginBottom="@dimen/d40"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/d25"
        android:paddingLeft="@dimen/d25"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d105">

        <TextView
            android:layout_marginLeft="@dimen/dp15"
            android:textColor="@color/black33"
            android:textSize="@dimen/dp30"
            android:text="软件版本"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/wofanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout

        android:background="@color/white"
        android:layout_marginBottom="@dimen/d40"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/d25"
        android:paddingLeft="@dimen/d25"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d105">

        <TextView
            android:layout_marginLeft="@dimen/dp15"
            android:textColor="@color/black33"
            android:textSize="@dimen/dp30"
            android:text="选择语言"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="中文"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/wofanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>