<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_head"/>
    <LinearLayout
        android:background="#f8f8f8"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp120">
        <LinearLayout
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginRight="@dimen/dp30"
            android:layout_marginLeft="@dimen/dp30"
            android:background="@drawable/bt_sousuo_circle"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/et_phone"
                android:background="@null"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <RelativeLayout
                android:background="@color/black_ee"
                android:layout_width="@dimen/dp135"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/sou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/dp30"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp120">
        <ImageView
            android:id="@+id/iv_head"
            android:src="@mipmap/logo"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_marginLeft="@dimen/dp20"
                android:textColor="@color/black33"
                android:textSize="@dimen/dp30"
                android:text="客服"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/bt_add"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bt_blue_circle"
                    android:textColor="@color/white"
                    android:text="添加"
                    android:layout_width="@dimen/d100"
                    android:layout_height="@dimen/dp50" />
            </RelativeLayout>
    </LinearLayout>
</LinearLayout>