<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="@dimen/d22"
    android:background="@color/white"
    android:orientation="vertical" 
    android:padding="@dimen/d40"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="180dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_img"
            android:src="@color/black_ee"
            android:layout_width="@dimen/dp44"
            android:layout_height="@dimen/dp44" />
        <TextView
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp24"
            android:textColor="@color/black33"
            android:text="北斗粉丝"
            android:textSize="@dimen/dp24"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp44" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/dp38"
        android:text="北斗区块链科技平台"
        android:textSize="@dimen/dp32"
        android:textColor="@color/black33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="@dimen/dp32"
        android:text="北斗区块链科技平台"
        android:textSize="@dimen/dp28"
        android:textColor="@color/black77"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp66" />
    <RelativeLayout
        android:layout_marginTop="@dimen/dp30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp30">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_centerVertical="true"
            android:text="2018-06-08"
            android:textColor="@color/black66"
            android:textSize="@dimen/dp24" />
        <ImageView
            android:layout_marginRight="@dimen/dp20"

            android:layout_toLeftOf="@+id/tv_num"
            android:src="@mipmap/pingl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" />
        <TextView
            android:layout_marginBottom="5px"

            android:id="@+id/tv_num"
            android:layout_alignParentRight="true"
            android:text="212"
            android:textColor="@color/black66"
            android:textSize="@dimen/dp24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>